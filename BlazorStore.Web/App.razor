<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly"
            AdditionalAssemblies="new [] {
                typeof(BlazorStore.Web.Common.Controls.SearchBarComponent).Assembly,
                typeof(BlazorStore.Web.CustomerPortal.Pages.ViewProductComponent).Assembly,
                typeof(BlazorStore.Web.AdminPortal.Pages.OutstandingOrdesComponent).Assembly
            }">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <LoginComponent></LoginComponent>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

<div class="card m-2 p-2" style="width: 12rem;">
  <img src="@Product.ImageLink" class="card-img-top" alt='@("{Product.Name} picture")' />
  <div class="card-body">
    <h5 class="card-title"><a href="@($"product/{Product.ProductId}")">@Product.Name</a></h5>
    <p class="card-text" style="color:darkred;">@Product.Price.ToString("C")</p>
  </div>
</div>

@code {
    [Parameter]
    public Product Product { get; set; }
}
